{
	"name": "web-summarizer-api",
	"scripts": {
		"dev": "tsx watch src/index.js",
		"lint": "prettier --check . && eslint .",
		"generate": "prisma generate",
		"dbsync": "prisma db push",
		"dbrefresh": "prisma db push --force-reset",
		"studio": "prisma studio",
		"test:dbrefresh": "cross-env DATABASE_URL=file:./test.db prisma db push --force-reset",
		"test:devserver": "cross-env PORT=4099 tsx src/index.js",
		"test:vitest": "cross-env PORT=4099 vitest run",
		"test": "pnpm test:dbrefresh && concurrently --kill-others --success first \"pnpm test:vitest\" \"pnpm test:devserver\""
	},
	"main": "./src/index.js",
	"type": "module",
	"dependencies": {
		"@prisma/client": "^5.20.0",
		"dotenv": "^16.4.5",
		"express": "^4.21.1",
		"http-status-codes": "^2.3.0",
		"puppeteer": "^23.5.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@types/node": "^22.7.5",
		"concurrently": "^9.0.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"prisma": "^5.20.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vitest": "^2.1.2"
	}
}
