{
	"name": "web-summarizer-api",
	"properName": "Web Summarizer API",
	"description": "A simple API that scrapes a webpage, creates a summary of what is inside it using LLM, and delivers it to the user.",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"lint": "prettier --check . && eslint . && tsc",
		"cf-d1-generate": "prisma generate",
		"cf-d1-local": "wrangler d1 migrations create DATABASE initial",
		"cf-d1-create": "prisma migrate diff --from-local-d1 (--from-empty) --to-schema-datamodel ./prisma/schema.prisma --script --output migrations/####_###_what_changed_###.sql (copypaste)",
		"cf-d1-migrate-local": "wrangler d1 migrations apply web-summarizer-api --local",
		"cf-d1-migrate-remote": "wrangler d1 migrations apply web-summarizer-api --remote"
	},
	"author": "thisjt",
	"authorUrl": "https://thisjt.me",
	"authorEmail": "contact@thisjt.me",
	"version": "1.0.0",
	"private": false,
	"type": "module",
	"devDependencies": {
		"@cloudflare/puppeteer": "^0.0.14",
		"@cloudflare/workers-types": "^4.20240925.0",
		"@hono/zod-openapi": "^0.16.4",
		"@prisma/adapter-d1": "^5.21.1",
		"@prisma/client": "^5.21.1",
		"@scalar/hono-api-reference": "^0.5.156",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"http-status-codes": "^2.3.0",
		"prettier": "^3.3.3",
		"prisma": "^5.21.1",
		"stoker": "^1.2.7",
		"typescript-eslint": "^8.11.0",
		"wrangler": "^3.79.0"
	},
	"packageManager": "pnpm@9.9.0"
}
