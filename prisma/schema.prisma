generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["omitApi", "driverAdapters"]
}

datasource db {
    provider = "sqlite"
    // not that useful as local db will be from wrangler miniflare d1 db (.wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.db)
    url      = "file:./db.db"
}

model Jobs {
    id                    Int     @id @default(autoincrement())
    url                   String
    // sqlite does not support enums
    // status: [queue, processing, completed, failed]
    status                String
    summary               String?
    summary_logs          String?
    summary_error_message String?
    timestamp             BigInt
    started               BigInt?
    finished              BigInt?
}
