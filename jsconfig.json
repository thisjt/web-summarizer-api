{
	"compilerOptions": {
		"target": "es2019",
		"module": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"noEmit": true,
		"paths": {
			// I'm kind of used to sveltekit's $lib alias, so im reusing it here
			"$lib/*": ["./src/lib/*"]
		}
	},
	"include": ["./src/**/*"]
}
